{
  "name": "fspe",
  "version": "1.0.0",
  "description": "Full stack progressive enhancement pattern",
  "main": "index.js",
  "scripts": {
    "env": "env",
    "clean": "rm -r dist",
    "prebuild": "npm run clean",
    "postbuild": "cp -R src/api dist/api",
    "build:html": "node buildscripts/html.js",
    "build:js": "browserify -t hbsfy src/js/render.js > dist/fspe.js",
    "build": "npm run build:html && npm run build:js"
  },
  "author": "Phil Hawksworht",
  "license": "ISC",
  "dependencies": {
    "browserify": "^13.0.0",
    "chalk": "^1.1.1",
    "glob": "^7.0.3",
    "handlebars": "^4.0.5",
    "handlebars-layouts": "^3.1.3",
    "handlebars-loader": "^1.1.4",
    "hbsfy": "^2.5.1",
    "jbone": "^1.1.2",
    "reqwest": "^2.0.5"
  },
  "devDependencies": {
    "handlebars-helpers": "^0.5.8"
  },
  "browserify": {
    "transform": [
      "hbsfy"
    ]
  }
}
